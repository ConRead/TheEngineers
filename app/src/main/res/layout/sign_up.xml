<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login"
    tools:context="com.example.faithanalie.conread.Sign_up">


    <TextView
        android:text="@string/reminder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginBottom="24dp"
        android:id="@+id/reminder"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:text="@string/sign_up_text"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:textColor="#ffffff"
        android:id="@+id/signup"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/reminder"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/rewrite_pass_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/rewrite_pass"
        android:layout_below="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:layout_marginTop="21dp" />

    <EditText
        android:hint="@string/ast_text"
        android:layout_width="200sp"
        android:inputType="textPassword"
        android:layout_height="25sp"
        android:background="#ffffff"
        android:textColor="#f17a0a"
        android:id="@+id/rewritepassText"
        android:layout_alignBottom="@+id/rewrite_pass"
        android:layout_toEndOf="@+id/rewrite_pass" />

    <EditText
        android:hint="@string/ast_text"
        android:inputType="textPersonName"
        android:layout_width="200sp"
        android:layout_height="25sp"
        android:background="#ffffff"
        android:textColor="#f17a0a"
        android:id="@+id/firstnameText"
        android:layout_alignBottom="@+id/first_name"
        android:layout_alignStart="@+id/middlenameText" />

    <EditText
        android:hint="@string/ast_text"
        android:layout_width="200dp"
        android:inputType="textPassword"
        android:layout_height="25dp"
        android:background="#ffffff"
        android:textColor="#f17a0a"
        android:id="@+id/passwordText"
        android:layout_above="@+id/rewrite_pass"
        android:layout_alignStart="@+id/rewritepassText" />

    <EditText
        android:hint="@string/ast_text"
        android:layout_width="200dp"
        android:inputType="textPersonName"
        android:layout_height="25dp"
        android:background="#ffffff"
        android:textColor="#f17a0a"
        android:id="@+id/contactno.Text"
        android:layout_alignBottom="@+id/contact_no."
        android:layout_toEndOf="@+id/rewrite_pass" />

    <EditText
        android:hint="@string/ast_text"
        android:inputType="textPersonName"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:background="#ffffff"
        android:textColor="#f17a0a"
        android:id="@+id/middlenameText"
        android:layout_alignBottom="@+id/middle_name"
        android:layout_alignStart="@+id/addressText" />

    <EditText
        android:hint="@string/ast_text"
        android:layout_width="200sp"
        android:inputType="textPersonName"
        android:layout_height="25sp"
        android:background="#ffffff"
        android:textColor="#f17a0a"
        android:id="@+id/addressText"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/firstnameText"
        android:layout_alignStart="@+id/usernameText" />

    <TextView
        android:text="@string/first_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/first_name"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/middle_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/pass_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/pass"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/usernameText"
        android:layout_alignEnd="@+id/username" />

    <TextView
        android:text="@string/contact_no_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/contact_no."
        android:layout_marginTop="22dp"
        android:layout_below="@+id/rewrite_pass"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/user_name2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/username"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/address"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="@string/ast_text"
        android:layout_width="200sp"
        android:inputType="textPersonName"
        android:layout_height="25sp"
        android:background="#ffffff"
        android:textColor="#f17a0a"
        android:id="@+id/usernameText"
        android:layout_alignBottom="@+id/username"
        android:layout_alignStart="@+id/passwordText" />

    <TextView
        android:text="@string/last_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/last_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/address"
        android:layout_alignBottom="@+id/addressText"
        android:layout_alignStart="@+id/middle_name" />

    <EditText
        android:hint="@string/ast_text"
        android:layout_width="200sp"
        android:inputType="textPersonName"
        android:layout_height="25sp"
        android:background="#ffffff"
        android:textColor="#f17a0a"
        android:id="@+id/lastnameText"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/middlenameText" />

    <TextView
        android:text="@string/middle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/middle_name"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/lastnameText"
        android:layout_alignStart="@+id/pass" />

</RelativeLayout>
